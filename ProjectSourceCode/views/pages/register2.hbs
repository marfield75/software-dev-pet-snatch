{{> message}}
<div id="g2body">
    <div class="register-container">
        <h2 style="text-align: center;">Pet's Information</h2>
        <form id="petInformationForm" action="/register2" method="POST" enctype="multipart/form-data">
            <!-- Container for form fields with three columns -->
            <div class="form-grid">
                <!-- Pet Name -->
                <div>
                    <label for="pet-Name">Pet's Name</label>
                    <input type="text" id="pet-Name" name="petName" required style="width: 100%;">
                </div>

                <!-- Pet Class -->
                <div>
                    <label for="pet-class">Pet's Class</label>
                    <input type="text" id="pet-class" name="petClass" required style="width: 100%;">
                </div>

                <!-- Pet Age -->
                <div>
                    <label for="pet-age">Pet's Age</label>
                    <input type="number" id="pet-age" name="petAge" required style="width: 100%;" min="0">
                </div>

                <!-- Pet Color -->
                <div>
                    <label for="pet-color">Pet's Color</label>
                    <input type="text" id="pet-color" name="petColor" required style="width: 100%;">
                </div>

                <!-- Pet Weight -->
                <div>
                    <label for="pet-weight">Pet's Weight</label>
                    <input type="number" id="pet-weight" name="petWeight" required style="width: 100%;" min="1">
                </div>

                <!-- Pet Breed -->
                <div>
                    <label for="pet-breed">Pet's Breed</label>
                    <input type="text" id="pet-breed" name="petBreed" required style="width: 100%;">
                </div>

                <!-- Eye Color -->
                <div>
                    <label for="eye-color">Eye Color</label>
                    <input type="text" id="eye-color" name="eyeColor" required style="width: 100%;">
                </div>

                <!-- Birthday -->
                <div>
                    <label for="birth">Birthday</label>
                    <input type="date" id="birth" name="birth" required style="width: 100%;">
                </div>

                <!-- Pet Bio -->
                <div>
                    <label for="pet-bio">Pet's Bio</label>
                    <input type="text" id="pet-bio" name="petBio" required style="width: 100%;">
                </div>

                <!-- Location -->
                <div>
                    <label for="location">Location <span style="color: red; font-size: smaller;">(City,ST)</span></label>
                    <input type="text" id="location" name="location" required style="width: 100%;">
                </div>

                <!-- Pet Image Upload -->
                <div>
                    <label for="price">Price <span style="color: red; font-size: smaller;">For adoption set price as 0</span></label>
                    <input type="number" id="price" name="price" required style="width: 100%;" min="0">
                </div>
                 
                 <!-- Pet Image Upload -->
                <div>
                    <label for="pet-image">Upload Pet's Image</label>
                    <input type="file" id="pet-image" name="petImage" required style="width: 100%;">
                </div>
            </div>

            <div style="text-align: center; margin-top: 20px;">
                <button type="submit" style="padding: 10px 20px;">Continue</button>
            </div>
        </form>
    </div>
</div>

<style>
    .form-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr); /* Three columns */
        gap: 10px;
    }

    .form-grid div {
        width: 100%;
    }
</style>
