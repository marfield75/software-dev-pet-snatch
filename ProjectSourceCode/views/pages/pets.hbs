<div id="pets-container">
    {{#if pets.length}}
    <div id="homebody"> <!-- Align with the structure of home.hbs -->
        {{#each pets}}
        <div class="card">
            <img src="{{this.image_url}}" class="card-img-top" alt="{{this.name}}">


            <div class="card-body">
                <h5 class="card-title"><strong>{{this.name}}</strong></h5>
                <p class="card-text">Breed: {{this.breed}}</p>
                <p class="card-text">Age: {{this.age}}</p>
            </div>
            <div class="card-body">
                <!-- Display success or duplicate message -->
                {{#if message}}
                <div class="alert {{#ifEquals message "
                    alreadyInWishlist"}}alert-warning{{else}}alert-success{{/ifEquals}}">
                    {{#ifEquals message "alreadyInWishlist"}}
                    This pet is already on your wishlist.
                    {{else}}
                    Pet added to your wishlist successfully!
                    {{/ifEquals}}
                </div>
                {{/if}}

                <form method="POST" action="/view-pet">
                    <input type="hidden" name="petId" value="{{this.id}}">
                    <button type="submit" class="btn btn-primary">View Details</button>
                </form>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <p style="text-align: center; color: #555;">No pets found matching your search criteria.</p>
    {{/if}}
</div>