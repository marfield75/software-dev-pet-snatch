<head>
  <title>Pet Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  <style>
    button {
      background-color: #101010;
      width: 300px;
      border: none;
      color: white;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
    }

    .star-button {
      display: inline-block;
      width: 48px;
      height: 48px;
      background-color: #FFD700;
      clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
      border: none;
      text-align: center;
      cursor: pointer;
      vertical-align: middle;
    }

    .center {
      max-width: fit-content;
      margin-left: auto;
      margin-right: auto;
    }

    p {
      margin-bottom: 1px;
    }

  </style>
</head>
<h3>{{pet.name}}</h3>
<h4 class="text-center">Posted by <a href="/profile">username</a></h4>

<!-- pet images carousel-->
<div id="pet-images" class="carousel slide pb-3 w-50 center" data-ride="carousel">
  <div id="pet-images" class="carousel slide w-100">
    <div id="carousel-bottom-indicators" class="carousel-indicators">
      <button type="button" data-bs-target="#pet-images" data-bs-slide-to="0" class="active" aria-current="true"
        aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#pet-images" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#pet-images" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active" id="carousel-item-1">
          <img class="d-block w-100"
              src="/img/{{pet.image_url}}"
              alt="First slide">
        </div>
        <div class="carousel-item" id="carousel-item-2">
          <img class="d-block w-100" src="/img/{{pet.image_url}}" alt="Second slide">
        </div>
        <div class="carousel-item" id="carousel-item-3">
          <img class="d-block w-100" src="/img/{{pet.image_url}}" alt="Third slide">
        </div>
        </div>
        <button id="carousel-prev" class="carousel-control-prev" type="button" data-bs-target="#pet-images"
          data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button id="carousel-next" class="carousel-control-next" type="button" data-bs-target="#pet-images"
          data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <!-- pet details -->
      <div>
        <div class="mt-3">
          <h5>Desciption</h5>
          <p><b>Class:</b> {{pet.class}} </p>
          <p><b>Breed:</b> {{pet.breed}} </p>
          <p><b>Age:</b> {{pet.age}} </p>
          <p><b>Location:</b> {{pet.location}} </p>
        </div>

      </div>
      <div class="mt-3 col-md-12">
        <button type="contact-button">Contact Owner</button>
        <button type="cart-button">Add to Cart</button>
        <button class="star-button"></button>
      </div>

      <div class="mt-3">
        <textarea id="comments" name="comments" rows="4" cols="55">
		    Add a comment....
		  </textarea>
      </div>
    </div>