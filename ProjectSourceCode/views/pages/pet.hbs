<head>
  <link rel="stylesheet" href="/src/resources/css/style.css">

   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  <style>
    * {
        box-sizing: border-box;
    }

    #pet-info {
        font-family: Arial, Helvetica, sans-serif;
        background-image: url('https://marketplace.canva.com/EAFKWjY7ba8/1/0/1600w/canva-pink-abstract-watercolor-zoom-virtual-background-eWdcNlqbr_4.jpg');
    }

    button {
        background-color: #101010;
        width: 300px;
        height: 50px;
        border: none;
        color: white;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 20px;
      }

      .star-button {
        display: inline-block;
        width: 48px;
        height: 48px;
        background-color: #FFD700;
        clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
        border: none;
        text-align: center;
        cursor: pointer;
        vertical-align: middle;
      }

      button:hover {
          background-color: #D2B48C;
      }

      .center {
        max-width: fit-content;
        margin-left: auto;
        margin-right: auto;
      }

      p {
        margin-bottom: 1px;
      }
  </style>
</head>

<div id="pet-info">
  <div class="text-center">
  <h1 class="text-center"> {{pet.name}} </h1>
  <h4 class="text-center">Posted by <a href="/profile"> {{user.username}} </a></h4>

  <!-- pet images carousel-->
  <img src="{{pet.image_url}}" alt="pet image" style="width: 400px; height: auto;"> <!-- deleted class="d-block w-100" -->

    <!-- pet details -->
    <div>
      <div class="mt-3">
        <h5>Description</h5>
        <p><b>Class:</b> {{pet.class}} </p>
        <p><b>Breed:</b> {{pet.breed}} </p>
        <p><b>Age:</b> {{pet.age}} </p>
        <p><b>Location:</b> {{pet.location}} </p>
      </div>

    </div>
    <div class="mt-3 col-md-12">
      <button type="contact-button">Contact Owner</button>
      <button type="cart-button">Add to Cart</button>
       <form method="POST" action="/addToWishlist" style="display: inline;">
            <input type="hidden" name="petId" value="{{pet.id}}">
            <button type="submit" class="star-button" title="Add to Wishlist">
                <i class="fa fa-star"></i>
            </button>
        </form>
    </div>

    <div class="mt-3">
      <textarea id="comments" name="comments" rows="4" cols="55">
		    Notes....
		  </textarea>
    </div>
  </div>
</div>