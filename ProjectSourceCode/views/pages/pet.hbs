<head>
  <title>Pet Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  <style>
    .star-button {
      display: inline-block;
      width: 25px;
      height: 25px;
      background-color: #FFD700;
      clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
      border: none;
      text-align: center;
      cursor: pointer;
      vertical-align: middle;
    }

    .center {
      max-width: fit-content;
      margin-left: auto;
      margin-right: auto;
    }

    p {
      margin-bottom: 1px;
    }
  </style>
</head>
<h3 class="text-center">Pet Name</h2>
<h4 class="text-center">Posted by <a href="/">username</a></h2>

<!-- pet images carousel-->
<div id="pet-images" class="carousel slide pb-3 w-50 center" data-ride="carousel">
  <div id="pet-images" class="carousel slide w-100">
    <div id="carousel-bottom-indicators" class="carousel-indicators">
      <button type="button" data-bs-target="#pet-images" data-bs-slide-to="0" class="active" aria-current="true"
        aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#pet-images" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#pet-images" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active" id="carousel-item-1">
          <img class="d-block w-100"
              src="https://images.squarespace-cdn.com/content/v1/54822a56e4b0b30bd821480c/45ed8ecf-0bb2-4e34-8fcf-624db47c43c8/Golden+Retrievers+dans+pet+care.jpeg?format=750w"
              alt="First slide">
        </div>
        <div class="carousel-item" id="carousel-item-2">
          <img class="d-block w-100" src="" alt="Second slide">
        </div>
        <div class="carousel-item" id="carousel-item-3">
          <img class="d-block w-100" src="" alt="Third slide">
        </div>
        </div>
        <button id="carousel-prev" class="carousel-control-prev" type="button" data-bs-target="#pet-images"
          data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button id="carousel-next" class="carousel-control-next" type="button" data-bs-target="#pet-images"
          data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <!-- pet details -->
      <div>
        <p>
          <bold>Class:</bold> the class
        </p>
        <p>
          <bold>Breed:</bold> the breed
        </p>
        <p>
          <bold>Age:</bold> the age
        </p>
        <p>
          <bold>Location:</bold> the location
        </p>
        <div class="mt-3">
          <h5>Desciption</h5>
          <p><b>Class:</b> the class</p>
          <p><b>Breed:</b> the breed</p>
          <p><b>Age:</b> the age</p>
          <p><b>Location:</b> the location (x miles away)</p>
        </div>

      </div>
      <div class="mt-3 col-md-12">
        <button type="button">Contact Owner</button>
        <button type="button">Add to Cart</button>
        <button class="star-button"></button>
      </div>

      <div class="mt-3">
        <textarea id="comments" name="comments" rows="4" cols="55">
		    Add a comment....
		  </textarea>
      </div>
    </div>

