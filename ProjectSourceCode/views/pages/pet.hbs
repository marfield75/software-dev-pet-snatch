<head>
  <link rel="stylesheet" href="/src/resources/css/style.css">

   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  <style>
    * {
        box-sizing: border-box;
    }

    #pet-info {
        font-family: Arial, Helvetica, sans-serif;
        background-image: url('https://marketplace.canva.com/EAFKWjY7ba8/1/0/1600w/canva-pink-abstract-watercolor-zoom-virtual-background-eWdcNlqbr_4.jpg');
    }

    button {
        background-color: #101010;
        width: 300px;
        height: 50px;
        border: none;
        color: white;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 20px;
      }

      .star-button {
        display: inline-block;
        width: 48px;
        height: 48px;
        background-color: #FFD700;
        clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
        border: none;
        text-align: center;
        cursor: pointer;
        vertical-align: middle;
      }

      button:hover {
          background-color: #D2B48C;
      }

      .center {
        max-width: fit-content;
        margin-left: auto;
        margin-right: auto;
      }

      p {
        margin-bottom: 1px;
      }
  </style>
</head>

<div id="pet-info">
  <div class="text-center">
    <h1 class="text-center"><b> {{pet.name}}</b></h1>
    {{!-- <h6 class="text-center">Posted by <a href="/profile"> {{user.username}} </a></h6> --}}


    <!-- pet images carousel-->
    <div class="container">
      <div style="display:flex; align-items:center; gap:200px; padding-left: 150px;">
        <img src="{{pet.image_url}}" alt="pet image" style="width: 400px; height: auto;"> <!-- deleted class="d-block w-100" -->
        <!-- pet details -->
        <div style="outline:#101010 solid 5px; width: 400px; height: auto; padding-left: 10px; padding-right:10px; padding-bottom: 20px;">
          <div class="mt-3">
            <div style="padding-bottom: 20px;">
              <h1><b>Description</b></h1>
            </div>
            <h4><b>Class:</b> {{pet.class}} </h4>
            <h4><b>Breed:</b> {{pet.breed}} </h4>
            <h4><b>Age:</b> {{pet.age}} </h4>
            <h4><b>Location:</b> {{pet.location}} </h4>
            <h4><b>Price:</b> ${{pet.price}} </h4>
            <h4><b>Posted by: </b>{{user.username}}</h4>
            <h4><b>Owner Email: </b>{{user.email}}</h4>
          </div>
        </div>
      </div>
    </div>
    
    <div class="mt-3 col-md-12">
      
      <form method="POST" action="/addToCart" style="display: inline;">
        <input type="hidden" name="petId" value="{{pet.id}}">
        <button type="submit">Add to Cart</button>
      </form>
      <form method="POST" action="/addToWishlist" style="display: inline;">
        <input type="hidden" name="petId" value="{{pet.id}}">
        <button type="submit" class="star-button" title="Add to Wishlist"></button>
      </form>
    </div>

    <div class="mt-3">
      <textarea id="comments" name="comments" rows="4" cols="55">
		    {{pet.bio}}
		  </textarea>
    </div>
  </div>
</div>