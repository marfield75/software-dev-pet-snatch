<head>
  <title>Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  <style>
    body {
      background-image: url('IMG_8894.jpg');
      /* 替换为你的背景图 URL */
      background-size: cover;
      /* 让图片覆盖整个背景 */
      background-repeat: no-repeat;
      /* 防止背景重复 */
      background-attachment: fixed;
      /* 背景固定，不随滚动条移动 */
      background-position: center;
      /* 将背景图片居中显示 */
    }

    button {
      background-color: #101010;
      width: 225px;
      border: none;
      color: white;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
    }

    .center {
      max-width: fit-content;
      margin-left: auto;
      margin-right: auto;
    }

    p {
      margin-bottom: 1px;
    }
  </style>
</head>

<h3 class="text-center">Your Cart</h3>

<!-- pets in cart -->
{{#each pets}}
<div class="card center" style="width: 18rem;">
  <img class="card-img-top" src="{{this.image_url}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">${{this.price}}</p>
    <div class="d-flex flex-column align-items-center">
      <form method="POST" action="/view-pet" class="mb-2 w-100">
        <input type="hidden" name="petId" value="{{this.id}}">
        <button type="submit" class="btn btn-primary w-100">See info</button>
      </form>
      <form method="POST" action="/removeFromCart" class="w-100">
        <input type="hidden" name="petId" value="{{this.id}}">
        <button type="submit" class="btn btn-danger w-100">Remove</button>
      </form>
    </div>
  </div>
</div>
{{/each}}

<div class="mt-3 col-md-12 center">
    <h4>Total: ${{totalPrice}}</h4>
    <form method="GET" action="/payment">
        <button type="submit" class="btn btn-success">Checkout</button>
    </form>
</div>
