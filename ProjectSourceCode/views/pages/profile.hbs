<!-- profile.hbs -->
<head>
        <style>
        body {
            background-image: url('profileImg.jpg');
            background-size: cover; /* Makes the image cover the entire background */
            background-repeat: no-repeat; /* Prevents the image from repeating */
            background-position: center; /* Centers the background image */
        }
    </style>
</head>
<div class="container mt-5">
    <!-- Profile Header -->
    <div class="profile-header">
        <h1>Welcome, {{user.first_name}} {{user.last_name}}</h1>
        <p><strong>Username:</strong> {{user.username}}</p>
        <p><strong>Email:</strong> {{user.email}}</p>
        <a href="/register2" class="btn btn-primary mt-2">Add Pet</a>
        <a href="/editProfile" class="btn btn-primary mt-2">Edit Profile</a>
    </div>

    <!-- User's Pets Section -->
    <h2 class="mt-5">Your Pets</h2>
    <div class="row">
        {{#if user.pets.length}}
            {{#each user.pets}}
                <div class="col-md-4 pet-card">
                    <div class="card">
                        <!-- Pet Image -->
                        <img src="{{this.image_url}}" class="card-img-top" alt="{{this.name}}" onerror="this.src='https://via.placeholder.com/150';" />
                        <div class="card-body">
                            <!-- Pet Info -->
                            <form method="POST" action="/view-pet" class="mb-2 w-100">
                                <input type="hidden" name="petId" value="{{this.id}}">
                                <button type="submit" class="btn btn-primary w-100">See info</button>
                            </form>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <p class="text-muted">No pets added yet.</p>
        {{/if}}
    </div>
</div>
